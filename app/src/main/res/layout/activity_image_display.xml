<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.teddywyly.googleimagesearch.Activities.ImageDisplayActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/ivFullImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="@string/image_description_text"
        android:id="@+id/tvImageDescription"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:ellipsize="end" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbImage"
        android:layout_gravity="center" />
</FrameLayout>
